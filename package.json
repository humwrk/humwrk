{
	"name": "@humwrk/humwrk",
	"version": "1.0.0",
	"description": "My Moleculer-based microservices project",
	"workspaces": [
		"packages/**",
		"services/**"
	],
	"scripts": {
		"build": "tsc --build tsconfig.json",
		"dev": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --config moleculer.config.ts services/**/*.service.ts",
		"start": "moleculer-runner",
		"cli": "moleculer connect NATS",
		"ci": "jest --watch",
		"test": "jest --coverage",
		"dc:up": "docker-compose up --build -d",
		"dc:logs": "docker-compose logs -f",
		"dc:down": "docker-compose down"
	},
	"keywords": [
		"microservices",
		"moleculer"
	],
	"author": "",
	"devDependencies": {
		"@araclx/prettier-config": "^0.0.13",
		"@types/body-parser": "^1.19.0",
		"@types/compression": "^1.7.0",
		"@types/connect": "^3.4.33",
		"@types/cookie-parser": "^1.4.2",
		"@types/dotenv": "^8.2.0",
		"@types/helmet": "^0.0.48",
		"@types/ioredis": "^4.17.4",
		"@types/mongoose": "^5.7.36",
		"@types/redlock": "^4.0.1",
		"jest": "^25.1.0",
		"jest-cli": "^25.1.0",
		"lerna": "^3.22.1",
		"moleculer-repl": "^0.6.2",
		"ts-jest": "^25.3.0",
		"ts-node": "^8.8.1"
	},
	"dependencies": {
		"@typegoose/typegoose": "^7.3.5",
		"@types/jest": "^25.1.4",
		"@types/mkdirp": "^1.0.0",
		"@types/node": "^13.9.8",
		"compression": "^1.7.4",
		"connect": "^3.7.0",
		"cookie-parser": "^1.4.5",
		"dotenv": "^8.2.0",
		"helmet": "^4.1.1",
		"ioredis": "^4.14.1",
		"moleculer": "^0.14.0",
		"moleculer-db": "^0.8.4",
		"moleculer-db-adapter-mongo": "^0.4.7",
		"moleculer-web": "^0.9.0",
		"mongoose": "^5.10.5",
		"nats": "^1.3.2",
		"redlock": "^4.1.0",
		"typescript": "^3.8.3"
	},
	"engines": {
		"node": ">= 10.x.x"
	},
	"jest": {
		"coverageDirectory": "<rootDir>/coverage",
		"testEnvironment": "node",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"transform": {
			"^.+\\.(ts|tsx)$": "ts-jest"
		},
		"testMatch": [
			"**/*.spec.(ts|js)"
		],
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.json"
			}
		}
	}
}
